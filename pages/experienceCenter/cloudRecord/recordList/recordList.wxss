/* 录制列表为空 */
.no-list-container {
  /* margin-top: 32px; */
  text-align: center;
}
.no-list-container .no-list-content {
  width: 144px;
  height: 106px;
  margin: 0 auto;
    
}
.no-list-container  .empty-text {
  width: 100%;
  font-size: 14px;
  color: #666666;
  letter-spacing: 0;
  text-align: center;
  font-weight: 400;
  text-align: center;
}

/* 操作-下载/删除/取消 */
.operate-modal-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
  height: 100%;
  background-color: rgba(0,0,0,.4);
  filter: alpha(opacity=50);
}

.operate-modal-mask-warp {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
  overflow: auto;
  outline: 0;
  -webkit-overflow-scrolling: touch;
}

.operate-modal-mask-warp .operate-conatiner {
  position: fixed;
  bottom: 105px;
  left: 10px;
  right: 10px;
  box-sizing: border-box;
  height: 130px;
  padding: 20px 0px;
  background: #FFFFFF;
  border-radius: 10px;
  font-size: 16px;
  color: #2C2C2C;
  letter-spacing: 0.19px;
  text-align: center;
  font-weight: 400;
}

.operate-modal-mask-warp .operate-conatiner .download-btn {
  color: #648FFC;
}

.operate-modal-mask-warp .operate-conatiner .action-btn {
  height: 45px;
  line-height: 45px;
  cursor: pointer;
}

.operate-modal-mask-warp .operate-cancel {
  position: fixed;
  bottom: 40px;
  left: 10px;
  right: 10px;
  height: 55px;
  line-height: 55px;
  background: #FFFFFF;
  border-radius: 10px;
  font-size: 16px;
  color: #2C2C2C;
  letter-spacing: 0.19px;
  text-align: center;
  font-weight: 400;
  cursor: pointer;
}