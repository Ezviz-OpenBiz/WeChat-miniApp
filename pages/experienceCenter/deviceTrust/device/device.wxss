.device-trust-container {
  padding: 17px 15px;
}

.device-trust-container .title {
  width: 160px;
  height: 22px;
  font-size: 16px;
  color: #2C2C2C;
  font-weight: 400;
}

.device-trust-container .userType-container {
  width: 100%;
  box-sizing: border-box;
  margin-top: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.device-trust-container .userType-container .userType {
  width: calc(50% - 13rpx);
  box-sizing: border-box;
  height: 65px;
  padding: 12px 0px 0px 15px;
  background: #FFFFFF;
  box-shadow: 0px 2px 21px 0px rgba(30,56,120,0.06);
  border-radius: 14px;
  letter-spacing: 0;
}

.device-trust-container .userType-container .userType-active {
  border: 1px solid #648FFC;
}

.device-trust-container .userType-container .userType .title {
  width: 118px;
  height: 19px;
  font-size: 16px;
  color: #2C2C2C;
  font-weight: 400;
}

.device-trust-container .userType-container .userType .dec {
  margin-top: 5px;
  height: 17px;
  font-size: 12px;
  color: #999999;
  font-weight: 400;
}

.device-trust-container .divider {
  /* margin-top: 20px; */
  position: fixed;
  top: 140px;
  left: 0px;
  right: 0px;
  /* width: 100%; */
  height: 5px;
  background: #F8F8F8;
  
}

.device-trust-container .device-trust-content .authorizeTypeContainer {
  margin-top: 35px;
  height: 50px;
  font-size: 16px;
  color: #999999;
  letter-spacing: 0;
  line-height: 50px;
  font-weight: 400;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.device-trust-container .device-trust-content .authorizeTypeContainer .authorizeType {
  margin-right: 30px;
  text-align: left;
  height: 50px;
  line-height: 50px;
  color: #999999;
}

.device-trust-container .device-trust-content .authorizeTypeContainer .deviceTitle {
  color: #2C2C2C
}

.device-trust-container .device-trust-content .authorizeTypeContainer .authorizeTypeAct {
  color: #2C2C2C;
  font-size: 20px;
  font-weight: 500;
}

.device-trust-container .device-trust-content .searchBar {
  width: 100%;
  height: 70px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.device-trust-container .device-trust-content  .searchItem {
  position: relative;
  width: calc(100% - 45px);
  height: 40px;
  background: #F8F8F8;
  border-radius: 8px;
  font-size: 14px;
  color: #2C2C2C;
  letter-spacing: 0.17px;
  font-weight: 400;
}

.device-trust-container .device-trust-content  .searchItem .searchInput {
  height: 40px;
  line-height: 40px;
  padding: 0 44px;
  letter-spacing: 0.5px;
}
   
.device-trust-container .device-trust-content .clearIcon{
  display: inline-block;
  position: absolute;
  right: 0px;
  top: 10px;
  width: 20px;
  height: 20px;
  cursor: pointer;
  line-height: 40px;
  vertical-align: middle;
  margin-right: 15px;   
  cursor: pointer; 
}

.device-trust-container .device-trust-content .searchIcon {
  display: inline-block;
  width: 24px;
  height: 24px;
  position: absolute;
  left: 15px;
  top: 8px;  
}
.device-trust-container .device-trust-content .search-btn {
  display: inline-block;
  width: 45px;
  text-align: right;
  height: 20px;
  font-size: 14px;
  color: #2C2C2C;
  letter-spacing: 1px;
  font-weight: 400;
  cursor: pointer;
}

.device-trust-container .device-trust-content .list-container {
  width: 100%;
  height: 240px;
  overflow-y: auto;
  overflow-x: hidden;
}

.device-trust-container .device-trust-content .list-item {
  width: 99%;
  box-sizing: border-box;
  height: 104px;
  padding: 15px 0px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
}

.device-trust-container .device-trust-content .list-item .item-pic {
  position: relative;
  width: 130px;
  height: 74px;
  margin-left: 16px;
  background: #F1F1F1;
  border-radius: 8px;
  cursor: pointer;
}

.device-trust-container .device-trust-content .list-item .item-device-pic{
  margin-left: 0px;
  position: relative;
}

.device-trust-container .device-trust-content .list-item .item-device-pic .play-icon-bg{
  width: 30px;
  height: 30px;
  border-radius: 30px;
  text-align: center;
  line-height: 30px;
  cursor: pointer;
  position: absolute;
  top: 22px;
  left: 50px;
  background: rgba(0,0,0,0.50);
}

.device-trust-container .device-trust-content .list-item .item-device-pic .play-icon-bg .play-icon{
  width: 30px;
  height: 30px;
  line-height: 30px;
}

.device-trust-container .device-trust-content .list-item .item-pic .pic-image {
  width: 130px;
  height: 74px;
  border-radius: 8px;
}

.device-trust-container .device-trust-content .list-item .item-pic .trust-icon {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 52px;
  height: 18px;
  line-height: 18px;
  border-top-right-radius: 9px;
  border-bottom-right-radius: 9px;
  border-top-left-radius: 8px;
  background: #648FFC;
  text-align: center;
  font-size: 12px;
  color: #FFFFFF;
  font-weight: 400;
}

.device-trust-container .device-trust-content .item-container {
  margin-left: 16px;
  width: calc(100% - 182px);
  position: relative;
}

.device-trust-container .device-trust-content .item-container .promissTag {
  padding: 0px 4px;
  border: 0.5px solid #4C80F7;
  border-radius: 3px;
  font-size: 12px;
  color: #4C80F7;
  letter-spacing: 0;
  text-align: center;
  font-weight: 400;
}

.device-trust-container .device-trust-content .item-container .title {
  font-size: 16px;
  color: #2C2C2C;
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.device-trust-container .device-trust-content .item-container .detail {
  margin-top: 6px;
  height: 20px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: nowrap;
}

.device-trust-container .device-trust-content .item-container .detail .tag {
  display: inline-block;
  margin-right: 5px;
  padding: 0px 4px;
  border: 0.5px solid #4C80F7;
  border-radius: 3px;
  font-size: 12px;
  color: #4C80F7;
  letter-spacing: 0;
  text-align: center;
  font-weight: 400;
}

.device-trust-container .device-trust-content .item-container .detail .dec {
  display: inline-block;
  height: 20px;
  font-size: 14px;
  color: #666666;
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.device-trust-container .device-trust-action {
  position: fixed;
  bottom: 20px;
  left: 15px;
  right: 15px;
  height: 98px;
  padding-top: 12px;
  background: #ffffff;
}

.device-trust-container .device-trust-action .trust-btn {
  margin-top: 10px;
  width: 100%;
  height: 48px;
  line-height: 48px;
  background: #648FFC;
  border-radius: 8px;
  font-size: 16px;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  font-weight: 400;
}

.device-trust-container .linkToweb {
  position: fixed;
  bottom: 20px;
  left: 15px;
  right: 15px;
  height: 50px;
  line-height: 50px;
  font-size: 14px;
  color: #648FFC;
  letter-spacing: 0.17px;
  text-align: center;
  font-weight: 400;
}

/* 授权设备列表为空 */
.no-device-container {
  margin-top: 78px;
  text-align: center;
}
.no-device-container .no-device-content {
  width: 166px;
  height: 122px;
  margin: 0 auto;
    
}
.no-device-container  .empty-text {
  width: 100%;
  font-size: 14px;
  color: #666666;
  letter-spacing: 0;
  text-align: center;
  font-weight: 400;
  text-align: center;
}
.no-device-container .linkTo {
  margin-top: 6px;
  font-size: 14px;
  color: #648FFC;
  letter-spacing: 0.17px;
  text-align: center;
  font-weight: 400;
}

/* 播放弹窗 */
.device-play-container {
  z-index: 99;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0,0,0,.75);
}
.device-play-container .paly-content {
  position: relative;
  top: 160px;
  width: 100%;
  max-width: 800px;
  height: 210px;
  margin: 0 auto;
}
.device-play-container .paly-content  .title {
  position: absolute;
  top: 0px;
  width: 100%;
  height: 50px;
  line-height: 50px;
  z-index: 99;
  /* background-image: linear-gradient(180deg, rgba(0,0,0,0.75) 0%, rgba(0,0,0,0.00) 100%); */
  font-size: 16px;
  color: #FFFFFF;
  text-align: center;
  font-weight: 400;
}
.device-play-container .paly-content .video-container {
  width: 100%;
  height: 210px;
  text-align: center;
  position: relative;
  
}


.video-container .video-item {
  width: 100%;
  height: 420rpx;
  z-index: 0;
  background-image: linear-gradient(270deg, rgba(255,143,66,0.60) 0%, rgba(255,255,255,0.00) 100%);
}

cover-view[hidden]{
  display: none!important;
}
.video-container .video-loading-container {
  position: relative;
  height: 100%;
  width: 100%;
  text-align: center;
  display: flex;
  justify-content:center;
  align-items: center;
}
.video-loading-container .video-loading-bg{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
}
.video-loading-container .video-loaing {
  position: absolute;
  width: 100%;
  text-align: center;
}
.video-loaing .loading-gif {
  display: inline-block;
  width: 52rpx;
  height: 52rpx;
}

.video-loaing .play-gif {
  display: inline-block;
  width: 128rpx;
  height: 128rpx;
}

.video-loading-container .video-loaing .video-loading-text {
  margin-top: 22rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
  line-height: 40rpx;
  height: 40rpx;
}
.video-loading-container .video-loaing .video-loading-text.reTry {
  border: 2rpx solid #FFFFFF;
  border-radius: 40rpx;
  width: 156rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 40rpx;
  display: inline-block;
}

.video-container .video-controls-container {
  position: absolute;
  width: 100%;
  bottom:0;
  z-index: 1000;
  display: flex;
  height: 78rpx;
  padding: 0 15px;
  /* justify-content:space-around; */
  align-items: flex-start;
  align-content: flex-start;
  flex-wrap:wrap;
}
.video-container .video-controls-container .controls-img {
  width: 48rpx;
  height: 48rpx;
}


.device-play-container  .cancel-btn {
  position: fixed;
  bottom: 140px;
  width: 100%;
  text-align: center;
  display: block;
  cursor: pointer;
}
.device-play-container .cancel-btn .cancel-icon {
  margin: 0 auto;
  width: 40px;
  height: 40px;
}


  
