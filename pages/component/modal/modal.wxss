/* pages/component/modal/modal.wxss */

.modal-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
  height: 100%;
  background-color: rgba(0,0,0,.4);
  filter: alpha(opacity=50);
}

.modal-mask-warp {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
  overflow: auto;
  outline: 0;
  -webkit-overflow-scrolling: touch;
}

.modal-mask-warp .modal-container {
  width: 300px;
  margin:200px auto;
  background: #FFFFFF;
  border-radius: 16px;
  font-size: 16px;
  color: #2C2C2C;
  letter-spacing: 0;
  text-align: center;
  line-height: 24px;
  font-weight: 400;
}

.modal-mask-warp .modal-container .modal-content {
  padding: 20px 30px;
}

.modal-mask-warp .modal-container .modal-bottom {
  width: 100%;
  height: 50px;
  line-height: 50px;
  border-top: 1px solid #F1F1F1;
  font-size: 16px;
  color: #666666;
  letter-spacing: 0.19px;
  text-align: center;
  font-weight: 400;
  text-align: center;
}

.modal-mask-warp .modal-container .modal-bottom .info-btn {
  width: 100%;
  color: #648FFC;
  text-align: center;
  cursor: pointer;
}

.modal-mask-warp .modal-container .modal-bottom .btn-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-mask-warp .modal-container .modal-bottom .btn-group .cancel-btn {
  width: 147px;
  border-right: 1px solid #F1F1F1;
}

.modal-mask-warp .modal-container .modal-bottom .btn-group .confirm-btn {
  width: 147px;
  color: #648FFC;
  text-align: center;
  cursor: pointer;
}